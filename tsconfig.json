{
  "compilerOptions": {
    // Language and module settings
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    // Allow JS and TS to coexist during migration
    "allowJs": true,
    "checkJs": false,

    // Type checking - start lenient, tighten later
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,

    // Module resolution
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Output settings
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,

    // Path aliases (if you want to add later)
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/frontend/*"]
    }
  },
  "include": [
    "app/frontend/**/*",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "app/frontend/dist"
  ]
}
