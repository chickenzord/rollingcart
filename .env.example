# Rails Master Key (32 characters - copy from config/master.key)
RAILS_MASTER_KEY=your-rails-master-key-32chars!!

# Secret Key Base (32 characters - generate with: rails secret | head -c 32)
SECRET_KEY_BASE=your-secret-key-base-here-32chr!

# Database Password
DB_PASSWORD=changeme

# Application Configuration
APP_HOST=localhost
ALLOWED_HOSTS=localhost
CORS_ORIGINS=http://localhost:3000

# Optional: Rails Log Level (debug, info, warn, error)
RAILS_LOG_LEVEL=info

# Error Tracking with Sentry (Optional)
# Compatible with Sentry.io, GlitchTip, or any Sentry-compatible service
# SENTRY_DSN_UI: DSN for frontend/UI errors
# SENTRY_DSN_API: DSN for backend/API errors (not yet implemented)
# SENTRY_DSN: Default DSN if specific ones not set
# Leave all empty to disable error tracking
SENTRY_DSN_UI=
SENTRY_DSN_API=
SENTRY_DSN=

# Override environment name sent to Sentry (defaults to Rails.env)
SENTRY_ENVIRONMENT=

# Application version (automatically set by Docker build from git)
APP_VERSION=
GIT_COMMIT=
